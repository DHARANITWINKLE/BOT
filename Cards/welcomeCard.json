{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "ExtraLarge",
      "weight": "Bolder",
      "text": "ToDo Bot",
      "color": "Default",
      "horizontalAlignment": "Center"
    },
    {
      "type": "Image",
      "url": "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQd0Bxakr8nUUbav4VrGczsnAZuMzinoSf-gpjX4lL9dC1aBNr7aktmUEfz3IDL0rg9els&usqp=CAU",
      "altText": "bot image",
      "size": "Large",
      "width": "137px",
      "height": "133px",
      "horizontalAlignment": "Center"
    },
    {
      "type": "TextBlock",
      "text": "Hi I'm ToDo Bot ðŸ‘‹. I will help you creating , viewing and deleting the tasks.",
      "wrap": true,
      "horizontalAlignment": "Center",
      "size": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "Create",
      "card": {
        "type": "AdaptiveCard",
        "version": "1.1",
        "body": [
          {
            "type": "Input.Date",
            "id": "dueDate"
          },
          {
            "type": "Input.Text",
            "id": "comment",
            "placeholder": "Add a comment",
            "isMultiline": true
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "OK"
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "View",
      "url": "${viewUrl}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.1"
}